<!-- include Header -->
<%- include('include/_header') %>
<!-- /include Header -->

<!-- Main Section -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex">
      <a href="/" class="border-shadow">
        <span class="text-gradient"
          ><i class="fas fa-angle-double-left"></i> &nbsp; All User
        </span>
      </a>
    </div>

    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light sub-title"
        >Use the below form to Update an account</span
      >
    </div>

    <!-- Add User form  -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="hidden" name="id" value="<%= user._id %>" />
          <input
            id="name"
            type="text"
            name="name"
            value="<%= user.name %>"
            placeholder="Avinash Kumar Gupta"
            required
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            id="email"
            type="text"
            name="email"
            value="<%= user.email %>"
            placeholder="example@gmail.com"
            required
          />
        </div>

        <div class="form-group">
          <label for="gender">Gender :</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Male" <%=
            user.gender == 'Male' ? 'checked':'' %> required />
            <label for="radio-2" class="radio-label text-light">Male</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="Female" <%=
            user.gender == 'Female' ? 'checked':'' %> required/>
            <lable for="radio-3" class="radio-label text-light">Female</lable>
          </div>
        </div>

        <div class="form-group">
          <lable for="status">Status :</lable>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" <%=
            user.status == 'Active' ? 'checked':'' %> required />
            <lable for="radio-4" class="radio-label text-light">Active</lable>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" <%=
            user.gender == 'Inactive' ? 'checked':'' %> required/>
            <label for="radio-5" class="radio-label text-light">Inactive</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- Main Section -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
